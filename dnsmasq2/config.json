{
  "name": "Dnsmasq2",
  "version": "1.2",
  "slug": "dnsmasq2",
  "description": "A simple DNS and DHCP server",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "advanced": true,
  "startup": "system",
  "url": "https://github.com/ews99/hassio-addons",
  "boot": "auto",
  "host_network": true,
  "options": {
    "default_lease": 86400,
    "max_lease": 172800,
    "domain": null,
    "log_dhcp": false,
    "log_queries": false,
    "dnsservers": ["8.8.8.8", "8.8.4.4"],
    "networks": [
      {
        "subnet": "192.168.1.0",
        "netmask": "255.255.255.0",
        "range_start": "192.168.1.100",
        "range_end": "192.168.1.200",
        "broadcast": "192.168.1.255",
        "dnsservers": ["192.168.1.1"],
        "gateway": "192.168.1.1",
        "interface": "eth0"
      }
    ],  
    "forwards": [],
    "hostrecords": [],
    "hosts": []
  },
  "schema": {
    "default_lease": "int",
    "max_lease": "int",
    "domain": "str",
    "log_queries": "bool",
    "log_dhcp": "bool",
    "dnsservers": ["str"],
    "networks": [
      {
        "subnet": "str",
        "netmask": "str",
        "range_start": "str",
        "range_end": "str",
        "broadcast": "str",
        "gateway": "str",
        "dnsservers": ["str"],
        "interface": "str"
      }
    ],
    "forwards": [
      {
        "domain": "str",
        "server": "str"
      }
    ],
    "hostrecords": [
      {
        "host": "str",
        "ip": "str"
      }
    ],
    "hosts": [
      {
        "host": "str",
        "ip": "str",
        "mac": "str?"
      }
    ]
  },
  "image": "ews99/dnsmasq2-{arch}"
}
